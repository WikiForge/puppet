[Unit]
Description=ircecho
After=network.target

[Service]
User=root
Group=root
Type=simple
EnvironmentFile=-/etc/default/ircecho
ExecStart=/usr/local/bin/ircecho --ident_passwd_file=/etc/default/ircecho_password --infile=${INFILE} --channel $CHANS --nickname $NICK --nickname-pass $NICK_FOR_PASS --server $SERVER
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target
